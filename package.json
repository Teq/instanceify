{
  "name": "serialazy",
  "version": "1.0.0",
  "description": "A simple serialization tool for class instances / instance trees",
  "keywords": [
    "serialize",
    "deserialize",
    "json",
    "mapping",
    "typescript"
  ],
  "homepage": "https://github.com/teq/serialazy",
  "repository": {
    "type": "git",
    "url": "https://github.com/teq/serialazy.git"
  },
  "bugs": {
    "url": "https://github.com/teq/serialazy/issues"
  },
  "main": "./lib/dist/serialazy.js",
  "types": "./lib/dist/serialazy.d.ts",
  "scripts": {
    "lint": "tslint -p ./lib && tslint -p ./spec",
    "apidoc": "typedoc --target ES6 --module commonjs --excludePrivate --out ./doc ./lib",
    "cleanlib": "rm -rf ./lib/dist",
    "cleanspec": "rm -rf ./spec/bin",
    "clean": "npm run cleanlib && npm run cleanspec",
    "prebuildlib": "npm run cleanlib",
    "buildlib": "cd ./lib && tsc",
    "prebuildspec": "npm run cleanspec",
    "buildspec": "cd ./spec && tsc",
    "build": "npm run buildlib && npm run buildspec",
    "pretest": "npm run build",
    "test": "node ./spec/bin/run.js",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "author": "Andrey Tselischev <vorteq@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.47",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^3.5.3",
    "tslint": "^5.7.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.5.3"
  }
}
